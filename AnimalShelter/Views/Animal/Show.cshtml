@using AnimalShelter.Models;

<h1>Animal Shelter</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added.</h3>
}
else {
  <h2>@Model.Animal.Name</h2>
  <ul>
  <li>@Model.Animal.Date</li>
    <li>@Model.Animal.Breed</li>
    <li>@Model.Animal.Age</li>
  </ul>

  <a href="/">Click here to return to the index page</a>
  
}