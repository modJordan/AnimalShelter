@using AnimalShelter.Models;

<h1>Animal Shelter</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added.</h3>
}


@foreach (Animal animal in Model)
{
  <h2>@animal.Name</h2>
  <ul>
  <li>@animal.Date</li>
    <li>@animal.Breed</li>
    <li>@animal.Age</li>
  </ul>
  <a href="">Click here to see @animal.Name</a>

}
